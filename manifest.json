{
    "manifest_version": 2,
    "name": "Offers",
    "version": "0.1.0",
    "description": "Get supermarket offers",
    "icons": {
        "16": "./obj-16x16.png",
        "32": "./obj-32x32.png",
        "48": "./obj-48x48.png",
        "128": "./obj-128x128.png"
    },
    "background": {
        "persistent": true,
        "scripts":["./background.js"]
      },
     
      "browser_action": {
          "default_popup": "index.html"
              },
      "permissions": [
          "contextMenus",
          "tabs",
          "identity",
          "activeTab",
          "http://localhost/visiocodeprojects/*",
          "https://ajax.googleapis.com/"
          
      ],
      "content_scripts": [
        {
          "matches": ["*://*/*"],
          "css": ["mystyle.css"],
          "js": ["script.js"]
        }
      ]
      
} 